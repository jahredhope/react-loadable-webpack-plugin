{
  "name": "@jahredhope/react-loadable-webpack-plugin",
  "description": "Webpack plugin for creating and reading a react-loadable manifest",
  "author": "Jahred Hope <jahredhope@gmail.com>",
  "main": "index.js",
  "version": "0.0.0-development",
  "license": "MIT",
  "scripts": {
    "lint.eslint": "eslint .",
    "lint.prettier": "prettier --list-different **/*.{mjs,js}",
    "lint": "npm run lint.eslint && npm run lint.prettier",
    "jest": "jest ./tests",
    "test": "npm run lint && npm run jest",
    "format": "prettier --write **/*.{mjs,js}",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "deploy": "npm run test && semantic-release"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "^5.6.1",
    "fs-extra": "^7.0.0",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "webpack": "^4.20.2"
  },
  "dependencies": {
    "babel-eslint": "^10.0.1",
    "webpack-sources": "^1.3.0"
  },
  "peerDependencies": {
    "react-loadable": "^5.5.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
